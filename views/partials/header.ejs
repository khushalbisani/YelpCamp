<!DOCTYPE html>
<html>
    <head>
        <title>The Yelpcamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link type="text/css" rel="stylesheet" href="/style.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
            <a class="navbar-brand" href="/">YelpCamp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up <i class="fa fa-user-plus"></i> </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Sign In <i class="fa fa-user"></i> </a>
                        </li>
                    <% } else{ %>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout <i class="fa fa-user"></i> </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
        </nav>

        <div class="container">
            <% if(error && error.length>0) {%>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } %>
            <% if(success && success.length>0) {%>
            <div class="alert alert-success">
                <%= success %>
            </div>
            <% } %>
        </div>